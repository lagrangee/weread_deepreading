{
  "manifest_version": 3,
  "name": "微信读书深度阅读助手",
  "version": "1.1.4",
  "description": "微信读书深度阅读助手，提供解释、消化、兼听等功能",
  "author": "lagrangee",
  "homepage_url": "https://github.com/lagrangee/weread-deepreading",
  "minimum_chrome_version": "88",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://*.baidubce.com/*",
    "https://dashscope.aliyuncs.com/*",
    "https://*.volces.com/*",
    "https://api.moonshot.cn/*",
    "https://api.minimaxi.com/*",
    "https://open.bigmodel.ai/*",
    "https://open.bigmodel.cn/*",
    "https://weread.qq.com/*"
  ],
  "action": {
    "default_icon": {
      "16": "assets/icons/icon16.png",
      "32": "assets/icons/icon32.png",
      "48": "assets/icons/icon48.png",
      "64": "assets/icons/icon64.png",
      "128": "assets/icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.bundle.js"
  },
  "options_page": "popup/popup.html",
  "content_scripts": [
    {
      "matches": [
        "https://weread.qq.com/web/reader/*"
      ],
      "js": [
        "content-vendor.bundle.js",
        "content.bundle.js"
      ],
      "css": [
        "content/assistant-panel.css"
      ],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "assets/icons/*",
        "content/assistant-panel.html"
      ],
      "matches": [
        "https://weread.qq.com/*"
      ],
      "extension_types": [
        "extension",
        "content_script"
      ]
    }
  ],
  "icons": {
    "16": "assets/icons/icon16.png",
    "32": "assets/icons/icon32.png",
    "48": "assets/icons/icon48.png",
    "64": "assets/icons/icon64.png",
    "128": "assets/icons/icon128.png"
  }
}